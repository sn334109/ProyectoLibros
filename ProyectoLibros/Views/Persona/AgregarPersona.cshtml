@using Dominio
@model Persona

@{
    string nombre = "";
    DateTime fechaNacimiento = DateTime.Now;
    string cedula = "";
}


@if (ViewBag.Error != null)
{
    <h4 class="alert-danger">@ViewBag.Error</h4>
}

@if (ViewBag.Mensaje != null)
{
    <h4 class="alert-info">@ViewBag.Mensaje</h4>
}


@if (Model != null)
{
    nombre = Model.Nombre;
    fechaNacimiento = Model.FechaNacimiento;
    cedula = Model.Cedula;
}

<form method="post">
    <input type="text" name="nombre" placeholder="Nombre de la persona" value="@nombre" /> <br></br>
    <input type="datetime" name="fecha" placeholder="Fecha de nacimiento" value="@fechaNacimiento" /> <br></br>
    <input type="text" name="cedula" placeholder="Cédula de la persona" value="@cedula" /> <br></br>
    <input type="submit" value="Ingresar Persona" />



</form>